#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --experimental-specifier-resolution=node --no-warnings "$basedir/../@alleyway/add-tradingview-alerts-tool/dist/cli.js" "$@"
else 
  exec node --experimental-specifier-resolution=node --no-warnings "$basedir/../@alleyway/add-tradingview-alerts-tool/dist/cli.js" "$@"
fi
